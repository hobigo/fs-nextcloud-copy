{
  "name": "fs-nextcloud-copy",
  "version": "0.0.2",
  "description": "",
  "author": "",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "license": "MIT",
  "scripts": {
    "record": "nyc mocha -r ts-node/register test/*test.ts --record",    
    "build": "node ./node_modules/typescript/bin/tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "mocha -r ts-node/register src/test/*test.ts",    
    "cover": "nyc mocha -r ts-node/register test/*test.ts && nyc report --reporter=text-lcov > coverage.lcov",    
    "start": "node ./dist/src/main.js"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "env": "0.0.2",
    "nextcloud-node-client": "^1.1.6",
    "readdirp": "^3.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/debug": "^4.1.5",
    "@types/dotenv": "^8.2.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.5",
    "chai": "^4.2.0",
    "mocha": "^7.0.0",
    "mocked-env": "^1.3.2",
    "nyc": "^15.0.0",
    "prettier": "^1.18.2",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.js",
      "test/**/*.ts"
    ],
    "reporter": [
      "html",
      "lcov"
    ],
    "all": true,
    "report-dir": "./coverage"
  }
}
